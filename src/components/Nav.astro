---
import Search from "astro-pagefind/components/Search";
---

<nav class="bg-white border-gray-200 dark:bg-gray-900">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <!-- Logo Section -->
        <a href="/" class="flex flex-col space-y-1 rtl:space-y-reverse">
      <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">
        Early Modern Workshop
      </span>
            <span class="text-sm text-gray-600 dark:text-gray-400">
        Resources in Jewish History
      </span>
        </a>

        <!-- Mobile Menu Button -->
        <button
                id="menu-toggle"
                aria-controls="mobile-menu"
                aria-expanded="false"
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        >
            <span class="sr-only">Open main menu</span>
            <svg
                    class="w-5 h-5"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 20 20"
                    aria-hidden="true"
            >
                <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 6h14M3 12h14M3 18h14"
                />
            </svg>
        </button>

        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center space-x-8">
            <a
                    href="/"
                    class="text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500"
            >
                Home
            </a>
            <a
                    href="/about"
                    class="text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500"
            >
                About
            </a>
            <a
                    href="/resources"
                    class="text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500"
            >
                Resources
            </a>

            <!-- Search Bar -->
            <div class="relative">
                <Search
                        id="search"
                        className="pagefind-ui"
                        uiOptions={{
                            showImages: false,
                        }}
                />
            </div>
        </div>

        <!-- Mobile Menu -->
        <div
                id="mobile-menu"
                class="hidden w-full md:hidden bg-gray-50 dark:bg-gray-800"
        >
            <ul class="flex flex-col space-y-4 p-4">
                <li>
                    <a
                            href="/"
                            class="block text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                    >
                        Home
                    </a>
                </li>
                <li>
                    <a
                            href="/about"
                            class="block text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                    >
                        About
                    </a>
                </li>
                <li>
                    <a
                            href="/resources"
                            class="block text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                    >
                        Resources
                    </a>
                </li>
                <li>
                    <!-- Mobile Search Bar -->
                    <Search
                            id="search"
                            className="pagefind-ui"
                            uiOptions={{
                                showImages: false,
                            }}
                    />
                </li>
            </ul>
        </div>
    </div>
</nav>